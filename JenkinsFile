pipeline {
    agent {
        kubernetes {
            yaml '''
        apiVersion: v1
        kind: Pod
        metadata:
          labels:
            build: node-test
        spec:
          containers:
          - name: node
            image: node:lts-buster-slim
            command:
            - cat
            tty: true

        '''
        }
    }
    stages {
        stage('Build') { 
            steps {
                container('node') {
                    sh 'npm install'
                }
            }
        }
        stage('Run test') {
            steps {
                container('node') {
                    sh 'npm run test'
                }
            }
        }
        stage('Check set') {
            steps {
                container('node') {
                    sh 'set'
                }
            }
        }        
    }
}
