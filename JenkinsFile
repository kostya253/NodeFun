pipeline {
    agent {
        kubernetes {
            yaml '''
        apiVersion: v1
        kind: Pod
        metadata:
          labels:
            build: node-test
        spec:
          containers:
          - name: node
            image: node:lts-alpine
            command:
            - cat
            tty: true

        '''
        }
    }
    stages {
        stage('Build') { 
            steps {
                sh 'npm install' 
            }
        }
        stage('Run test') {
            steps {
                container('node') {
                    sh 'node run test'
                }

            }
        }
    }
}